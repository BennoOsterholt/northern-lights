[Unit]
Description=execute the backup using pg_dump

# After= one *could* do a unit for the filesystem mount, that would be the proper way to do it
After=syslog.target
After=timers.target

[Service]
Type=forking
PIDFile=~/backups/

# do i need something here?
# ExecStartPre=/usr/bin/borg break-lock ~/backup/<hostname>

ExecStart=/usr/bin/pg_dump %i > /var/mnt/database/%i.backup